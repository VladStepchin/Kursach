@model IEnumerable<Kursach.Receiver>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;">Отримувач</h2>

<table class="striped bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirmTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPerson)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirmTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPerson)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<div id="openPopup-create">
    <a class="waves-effect waves-light btn-large add-metal">Додати провайдера</a>
</div>

<div id="modal_form">
    <!-- Сaмo oкнo -->
    <span id="modal_close">X</span> <!-- Кнoпкa зaкрыть -->
    @Html.Partial("Create", new Kursach.Receiver());
</div>
<div id="overlay"></div><!-- Пoдлoжкa --> 

<div class="additional-action">
    <a href=@Url.RouteUrl("ProviderReceiverInterconnection") class="waves-effect waves-light btn-large">Продавець--Покупець</a>
</div>